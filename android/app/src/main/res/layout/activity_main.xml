<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <VideoView
        android:id="@+id/videoView"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_weight="1" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_weight="1"
        android:background="@drawable/goalcheck">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@android:color/transparent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtView1"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_weight="1"

                android:background="@android:color/transparent"
                android:contentDescription="TODO"
                android:gravity="center"
                android:text="너의 포부를 밝혀라"
                android:textSize="25dp" />

            <LinearLayout
                android:id="@+id/LAYOUT"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@null"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/Edittxt"
                    android:layout_width="281dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"

                    android:background="@null"
                    android:enabled="false"
                    android:gravity="center"
                    android:inputType="textPersonName"
                    android:text="너의 포부를 밝혀라" />

                <ImageButton
                    android:id="@+id/imageButton2"
                    android:layout_width="83dp"
                    android:layout_height="match_parent"

                    android:layout_weight="1"
                    android:adjustViewBounds="false"
                    android:background="@null"
                    android:onClick="editButton"
                    android:paddingBottom="0dp"
                    android:paddingLeft="0dp"
                    android:paddingRight="0dp"
                    android:paddingTop="0dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/pencil" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/secondlay"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/buttonMini"
                    android:layout_width="93dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/polytechicon"
                    android:text="목표설정" />

                <ImageView
                    android:id="@+id/checkgoal"
                    android:layout_width="93dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/goal"
                    android:scaleType="fitXY" />

                <ImageView
                    android:id="@+id/imgBtnSetOption"
                    android:layout_width="93dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"

                    android:scaleType="fitCenter"
                    android:scaleX="1.1"


                    android:scaleY="1.1"
                    android:src="@drawable/gear" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="131dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="131dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtLeft"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:scaleX="2"
                        android:text="0" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ProgressBar
                        android:id="@+id/progressBar"
                        style="@android:style/Widget.ProgressBar.Horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"

                        android:max="100"
                        android:progress="72"
                        android:progressDrawable="@drawable/circle"
                        android:scaleX="0.7"
                        android:scaleY="0.7" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtRight"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:scaleX="2"
                        android:text="0" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:gravity="center"
                android:scaleX="2"
                android:scaleY="2"
                android:text="한달만에 모아라!" />

            <TextView
                android:id="@+id/txtSetViewMoneyToday"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:gravity="center"
                android:scaleX="2"
                android:scaleY="2"
                android:text="30/500 일일 진행상황" />

            <LinearLayout
                android:layout_width="400dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="150dp"
                    android:orientation="vertical"
                    android:paddingLeft="0dp"
                    android:paddingRight="0dp">

                    <ProgressBar
                        android:id="@+id/progressBar2"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:max="100"
                        android:paddingBottom="0dp"
                        android:paddingLeft="30dp"
                        android:paddingRight="30dp"
                        android:paddingTop="0dp"
                        android:progress="100"
                        android:progressDrawable="@drawable/vertical_progress" />

                    <TextView
                        android:id="@+id/dayLater3"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:text="" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ProgressBar
                        android:id="@+id/progressBar3"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:max="100"
                        android:paddingLeft="30dp"
                        android:paddingRight="30dp"
                        android:progress="80"
                        android:progressDrawable="@drawable/vertical_progress" />

                    <TextView
                        android:id="@+id/dayLater2"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ProgressBar
                        android:id="@+id/progressBar4"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:max="100"
                        android:paddingLeft="30dp"
                        android:paddingRight="30dp"
                        android:progress="50"
                        android:progressDrawable="@drawable/vertical_progress" />

                    <TextView
                        android:id="@+id/dayLater1"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingRight="0dp">

                    <ProgressBar
                        android:id="@+id/progressBar6"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:max="100"
                        android:paddingLeft="45dp"
                        android:paddingRight="45dp"
                        android:progress="50"
                        android:progressDrawable="@drawable/vertical_progress" />

                    <TextView
                        android:id="@+id/dayLater0"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:orientation="vertical">

                <ListView
                    android:id="@+id/in"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:layout_weight="1"
                    android:stackFromBottom="true"
                    android:transcriptMode="alwaysScroll" />

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</LinearLayout>